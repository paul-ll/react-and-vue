.comp-modal-container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, .6);
  z-index: 1000;
}

.modal-main {
  width: 80%;
  box-sizing: border-box;
  border-radius: 16rpx;
  background: #fff;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  -webkit-transform: translate(-50%, -50%);
  text-align: center;
  font-size: 32rpx;
  color: #262626;
  padding: 30rpx;
}

.modal-header {
  font-size: 36rpx;
  font-weight: bold;
}

.modal-body {
  padding: 30rpx 0 60rpx;
}

.modal-footer {
  font-size: 0;
}

.two-btn .modal-left-btn, .two-btn .modal-right-btn {
  width: 47%;
  display: inline-block;
  vertical-align: middle;
}

.modal-right-btn, .modal-left-btn {
  font-size: 32rpx;
  border-radius: 8rpx;
  color: #fff;
  height: 80rpx;
  line-height: 80rpx;
}

.modal-left-btn {
  margin-right: 6%;
  background: #e5e5e5;
}

.modal-right-btn {
  background: #ff4891;
}
