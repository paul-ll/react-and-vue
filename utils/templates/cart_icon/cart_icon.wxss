.cart-icon {
  position: fixed;
  z-index: 30;
  bottom: 160rpx;
  left: 30rpx;
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
}

.cart-bg {
  width: 100%;
  height: 100%;
}

.cart-count {
  position: absolute;
  left: 80rpx;
  top: 30rpx;
  padding: 4rpx;
  line-height: 1;
  min-width: 23rpx;
  text-align: center;
  border-radius: 50%;
  background: #ff4891;
  color: #fff;
  font-size: 24rpx;
  border: 1px solid #fff;
}