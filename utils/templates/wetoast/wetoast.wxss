
.wetoast {
    display: none;
}
.wetoast_show {
    display: block;
}
.wetoast__mask {
    position: fixed;
    z-index: 1000;
    top: 0;
    right: 0;
    left: 0;
    bottom: 0;
}
.wetoast__bd {
    opacity: 0;
    position: fixed;
    z-index: 5000;
    min-width: 200rpx;
    min-height: 60rpx;
    max-width: 70%;
    text-align: center;
    padding:15rpx 40rpx;
    line-height: 43rpx;
    top: 50%;
    left: 50%;
    width: 70%;
    box-sizing: border-box;
    transform: translateX(-50%);
    background: rgba(40, 40, 40, 0.75);
    border-radius: 5px;
    color: #FFFFFF;
    word-wrap: break-word;
    word-break: break-all;
}
.wetoast__bd__title {
    font-size: 32rpx;
}
.wetoast__bd.bottom{
    top:auto;
    bottom:40px;
    min-height: 4.4em;
}