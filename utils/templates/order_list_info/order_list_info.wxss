.order-detail-price {
    width: 100%;
    background: #ffffff;
    margin-top: 20rpx;
}

.order-detail-display-price {
    margin-left: 30rpx;
    margin-right: 30rpx;
}

.order-detail-display-item {
    height: 88rpx;
    line-height: 88rpx;
    font-size: 28rpx;
}

.order-detail-display-item-title, .order-detail-display-item-amount {
    display: inline-block;
}

.order-detail-display-item-title {

}

.order-detail-display-item-amount {
    float: right;
}

.order-detail-pay-price {
    height: 88rpx;
    line-height: 88rpx;
    font-size: 34rpx;
}

.order-detail-pay-price-title, .order-detail-pay-price-amount {
    float: right;
    display: inline-block;
}

.order-detail-pay-price-title {
    margin-left: 480rpx;
    color: #353535;
}

.order-detail-pay-price-amount {
    margin: 0 30rpx 0 40rpx;
    color: #ff4891;
}

.all-balance-pay-view {
    margin-top:20rpx;
    padding-left:30rpx;
    padding-right:30rpx;
    background:#ffffff;
}

.balance-pay-view {
    border-bottom:1px solid #e5e5e5;
}

.balance-pay {
    height:88rpx;
    line-height:88rpx;
    display:inline-block;
    font-size: 28rpx;
    color:#353535;
}

.price-amount {
    height:88rpx;
    line-height:88rpx;
    float:right;
    font-size:28rpx;
    color:#888888;
}

.full-up-view {
    width: 100%;
    height: 98rpx;
}

.order-detail-bottom-operation {
    width: 100%;
    height: 98rpx;
    line-height: 98rpx;
    text-align: center;
    position: fixed;
    bottom: -1rpx;
}

.order-detail-pay, .order-detail-customer {
    border-top: 1px solid #f5f5f5;
}

.order-detail-cancel, .order-detail-go-pay {
    width: 50%;
    display: inline-block;
    vertical-align: middle;
}

.order-detail-cancel {
    background: #ffffff;
    color: #888888;
}

.order-detail-go-pay {
    background: #ff4891;
    color: #ffffff;
}

.order-detail-pay-text, .order-detail-pay-image {
    display: inline-block;
}

.order-derail-pay-text {
    font-size: 32rpx;
}

.order-detail-pay-image {
    width: 24rpx;
    height: 24rpx;
    padding-left: 20rpx;
}

.order-detail-paid-cancel {
    background: #ffffff;
    color: #888888;
    font-size: 34rpx;
}

.order-detail-customer {
    background: #ffffff;
    color: #ff4891;
    padding-top: 10rpx;
}

.order-detail-customer-image, .order-detail-customer-text {
    display: inline-block;
}

.order-detail-customer-image {
    width: 44rpx;
    height: 44rpx;
    padding-right: 10rpx;
}

.order-detail-customer-text {
    font-size: 34rpx;
    position:relative;
    top:-5px;
}

.detail-loading {
    height: 90rpx;
    width: 204rpx;
    position: absolute;
    top: 500rpx;
    left: 50%;
    margin-left: -51px;
}

.order-detail-status {
    background: #fff;
    text-align: center;
    border-top: 1px solid #f5f5f5;
}

.order-detail-status-img {
    height: 140rpx;
    width: 140rpx;
    vertical-align: middle;
    margin-right: 10rpx;
    margin-top:50rpx;
    margin-bottom: 40rpx;
}

.order-detail-status-text {
    font-family: PingFangSC-Regular;
    font-size: 40rpx;
    color: #262626;
    letter-spacing: 0;
}
.order-detail-phone{
    margin: 0 auto;
    width: 200rpx;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    margin-top:26rpx;
    padding-bottom: 40rpx;
}

.order-detail-express-wraper {
    background: #fff;
    padding-top: 0.1px;
    margin-top: 20rpx;
}

.order-detail-express {
    margin: 30rpx 0 0 30rpx;
    box-sizing: border-box;
    border-left: 1px solid #c6c6c6;
    padding-top: 0.1px;
}

.order-detail-express-msg {
    padding: 0 30rpx 30rpx 0;
    margin: 30rpx 0 0 30rpx;
    font-size: 28rpx;
    color: #969696;
    border-bottom: 1px solid #e6e6e6;
    position: relative;
}

.order-detail-express-msg:first-of-type {
    margin-top: 0;
}

.order-detail-express-msg:last-of-type {
    border: none;
}

.order-detail-express-msg-status {
    font-size: 28rpx;
    margin-bottom: 20rpx;
    line-height: 42rpx;
}

.order-detail-express-msg:first-of-type {
    color:#353535;
}

.order-detail-express-msg-time {
    color: #969696;
    font-size: 24rpx;
}
