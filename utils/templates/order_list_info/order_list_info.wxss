
.order-detail-section {
    width: 100%;
    height: 100%;
}

.order-detail-receiver-info {
    width: 100%;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    background: #ffffff;
    padding-bottom: 28rpx;
    
}

.order-detail-people {
    font-size: 32rpx;
}

.order-detail-address {
    width: 670rpx;

}

.order-detail-people {
    display: flex;
    justify-content: center;
    width: 670rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    padding-top: 25rpx;
    
    border-top:1px solid #D8D8D8;
}

.order-detail-receiver-city, .order-detail-receiver-area {
    display: inline-block;
}

.order-detail-receiver-address,.order-detail-receiver-number,.order-detail-receiver-title,.order-detail-receiver-name {
    font-family: PingFangSC-Regular;
    font-size: 24rpx;
    color: #969696;
    letter-spacing: 0;
}

.order-detail-receiver-city, .order-detail-receiver-area {
    display: inline-block;
}

.order-detail-receiver-number {
    display: inline-block;
}

.order-detail-courier-info {
    width: 100%;
    height: 88rpx;
}

.order-detail-title {
    font-size: 28rpx;
    color: #888888;
    margin-top: 22rpx;
    margin-left: 30rpx;
    margin-bottom: 22rpx;
}

.order-detail-products {
    width: 100%;
    background: #ffffff;
}

.order-detail-order-items {
    height: 136rpx;
    line-height: 136rpx;
    margin-left: 30rpx;
    margin-right: 30rpx;
    border-bottom:1px solid #e5e5e5;
}

.order-detail-order-item-image, .order-detail-order-item-name-info, .order-detail-order-item-better-balance-price-info {
    display: inline-block;
}

.order-detail-order-item-image {
    width: 98rpx;
    height: 98rpx;
    position: absolute;
    margin-top: 19rpx;
    border-radius: 10rpx;
}

.order-detail-order-item-name-info, .order-detail-order-item-better-balance-price {
    position: relative;
}

.order-detail-order-item-name-info {
    width:420rpx;
    margin-left: 120rpx;
}

.order-detail-order-item-name {
    width:420rpx;
    max-width:420rpx;
    height: 32rpx;
    line-height: 32rpx;
    margin-top: 34rpx;
    font-size: 32rpx;
    color: #353535;
    overflow:hidden;
    white-space:nowrap;
    text-overflow:ellipsis;
}

.order-detail-item-nationwide {
    width: 96rpx;
    height: 22rpx;
    line-height: 22rpx;
    margin-top: 14rpx;
    font-size: 22rpx;
    color: #ff4891;
    text-align: center;
    border-radius: 4rpx;
    border: 1px solid #ff4891;
}

.order-detail-order-item-better-balance-price-info {
    width: 150rpx;
    text-align: right;
}

.order-detail-order-item-better-balance-price {
    height: 32rpx;
    line-height: 32rpx;
    margin-top: 31rpx;
    font-size: 32rpx;
    color: #353535;
}

.order-detail-order-item-quantity {
    height: 28rpx;
    line-height: 28rpx;
    margin-top: 14rpx;
    font-size: 28rpx;
    color: #888888;
}


