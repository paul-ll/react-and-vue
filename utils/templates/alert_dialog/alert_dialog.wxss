/* utils/templates/alert_dialog/alert_dialog.wxss */

.alert-dialog-background {
    width: 100%;
    height: 100%;
    position: fixed;
    background: rgba(0, 0, 0, 0.6);
    z-index: 4;
}

.alert-dialog-pan-background {
    background: white;
    width: 70%;
    margin: 300rpx auto;
    border-radius: 15rpx;
}

.alert-dialog-content {
    width: 80%;
    margin: auto;
    font-size: 28rpx;
    color: #474245;
    padding-top: 40px;
}

.no {
    color: white;
    font-size: 28rpx;
    border: solid #ff4891 2rpx;
    padding: 15rpx;
    display: inline-block;
    border-radius: 8rpx;
    background: #ff4891;
    text-align: center;
    box-sizing: border-box;
    flex-grow: 1;
    margin: 8% 0% 8% 8%;
    white-space: nowrap;
}

.yes {
    color: #ff4891;
    font-size: 28rpx;
    border: solid #ff4891 2rpx;
    padding: 15rpx;
    display: inline-block;
    border-radius: 8rpx;
    margin: 8% 8% 8% 8%;
    text-align: center;
    box-sizing: border-box;
    flex-grow: 1;
    white-space: nowrap;
}

.button-container {
    display: flex;
    margin-top: 40rpx;
}