.container {
  padding: 0 50rpx;
  overflow: auto;
  min-height: 100vh;
  height: auto;

  background-repeat: no-repeat;
  background-size: cover;
  background-color: rgba(254,48,70,1);
  /*必须指定一个网络图片*/
  background-image:url('https://j-image.missfresh.cn/img_20180518141401555.png');
}

.guarantee-rule-right, .guarantee-rule-left {
  position: absolute;
  top: 32rpx;
  z-index: 99;
}

.guarantee-rule-right {
  right: 50rpx;
  width: 122rpx;
}

.guarantee-rule-left {
  left: 50rpx;
  width: 204rpx;
  height: 36rpx;
}

.guarantee-rule-price {
  position: relative;
  width: 204rpx;
  height: 36rpx;
  z-index: 99;
  border-radius: 176rpx;
}

.guarantee-rule-post {
  position: relative;
  width: 122rpx;
  height: 36rpx;
  z-index: 99;
  border-radius: 176rpx;
}

.user-goods-info {
  width: 650rpx;
  height: 420rpx;
  background: white;
  position: relative;
  z-index: 1;
  margin-top: 98rpx;
  box-sizing: border-box;
  padding: 6rpx 0 14rpx 0;
  border-radius: 8rpx;
}

.user-goods-info .user-avatar {
  position: absolute;
  width: 132rpx;
  height: 132rpx;
  top: -66rpx;
  left: 50%;
  transform: translateX(-50%);
  border-radius: 50%;
  border: 1px solid white;
  z-index: 5;
}
.user-goods-info .user-avatar.real-image {
  z-index: 15;
}

.user-info {
  text-align: center;
  margin: auto 32rpx;
  padding-bottom: 12rpx;
  border-bottom: 1rpx solid rgba(216, 216, 216, 0.6);
}

.user-info .nick-name {
  max-width: 580rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  padding-top: 74rpx;
  font-size: 28rpx;
  color: #474245;
}

.user-info .quatation-mark {
  position: relative;
  width: 20rpx;
  height: 20rpx;
  vertical-align: top;
}

.user-info .share-msg {
  max-width: 580rpx;
  margin: 0 auto;
  display: flex;
  justify-content: center;
  font-size: 29rpx;
  color: #474245;
  font-weight: bold;
}

.share-msg-over {
  max-width: 580rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 29rpx;
  color: #474245;
  font-weight: bold;
  margin: 0 10rpx;
}

.bargain-info {
  font-size: 28rpx;
  color: #FFFFFF;
  text-align: center;
  height: 90rpx;
  line-height: 90rpx;
}

.bargain-info .price-text {
  font-size: 56rpx;
  color: #FFE713;
  font-weight: bold;
}

.bargain-info .remainder-price {
  font-size: 44rpx;
}

.countdown-container {
  margin: 12rpx 120rpx;
  text-align: center;
  line-height: 24rpx;
}

.share-box .share-btn {
  line-height: 74rpx;
  height: 84rpx;
  width: 100%;
  text-align: center;
  box-sizing: border-box;
  border-radius: 20rpx;
  font-size: 32rpx;
  font-weight: bold;
  position: relative;
  margin-bottom: 20rpx;
}

@keyframes breathing {
  from {
    transform: scale(1)
  }
  50% {
    transform: scale(1.05);
  }
  to {
    transform: scale(1);
  }
}

.bargain-helper {
  padding: 0 34rpx 32rpx 34rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 8rpx;
  min-height: 200rpx;
  margin-bottom: 60rpx;
}

.bargain-helper-title {
  border-bottom: 1rpx solid rgba(216, 216, 216, 1);
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 32rpx;
  color: #FFFFFF;
}

.bargain-helper-footer {
  width: 120rpx;
  height: 41rpx;
  margin: 0 auto;
  margin-top: 40rpx;
  text-align: center;
  border: 1px solid #fff;
  font-family: PingFangSC-Regular;
  font-size: 20rpx;
  line-height: 43rpx;
  color: #FFFFFF;
  letter-spacing: 0;
}

.lookup-more-helpers-btn {
  border: 2rpx solid #FFFFFF;
  width: 120rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  font-size: 20rpx;
  color: #FFFFFF;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 0;
  padding: 0;
}

.bg-img {
  width: 100vw;
  height: 100vh;
  position: fixed;
  top: 0;
  left: 0;
  background:rgba(254,48,70,1);
  z-index:-2;
}

.bargain-helper-right, .bargain-helper-left, .bargain-helper-list, .bargain-helper-kill {
  display: flex;
  align-items: center;
}

.bargain-helper-list {
  margin-top: 34rpx;
  justify-content: space-between;
  height: 88rpx;
}
.bargain-helper-left {
  position: relative;
}
.bargain-helper-user {
  width: 88rpx;
  height: 88rpx;
  margin-right: 14rpx;
  border-radius: 44rpx;
}
.bargain-helper-user.real-image {
  position:absolute;
  top:0;
  left:0;
  z-index:95
}

.bargain-helper-name {
  max-width: 210rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-family: PingFangSC-Semibold;
  font-size: 24rpx;
  color: #FFFFFF;
  letter-spacing: 0;
}

.bargain-helper-need {
  /*width: 48rpx;
  height: 48rpx;*/
  width: 40rpx;
  height: 40rpx;
}

.bargain-helper-desc {
  max-width: 190rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-family: PingFangSC-Regular;
  font-size: 20rpx;
  color: #FFFFFF;
  letter-spacing: 0;
  margin-top: 10rpx;
}

.bargain-helper-money {
  font-family: PingFangSC-Semibold;
  font-size: 24rpx;
  color: #FFE713;
  letter-spacing: 0;
  margin-left: 4rpx;
}

.bargain-helper-height {
  overflow: hidden;
  height: 250rpx;
}

.count-down-before-text, .count-down-after-text {
  font-size: 24rpx;
  color: #FFFFFF;
  display: inline-block;
}

.dialog-container {
  transition: all 300ms;
  -webkit-transition: all 300ms;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 999;
}

/* 红包弹窗 */

.black-mask {
  background: rgba(0, 0, 0, .7);
  width: 100%;
  height: 100%;
}

.close-dialog-btn {
  position: absolute;
  width: 44rpx;
  height: 44rpx;
  top: 20rpx;
  right: 20rpx;
  z-index: 2;
}

.dialog-body {
  width: 600rpx;
  height: 760rpx;
  text-align: center;
  position: relative;
  position: absolute;
  top: 50%;
  left: 50%;
  z-index: 100;
  transform: translate(-50%, -50%);
  -webkit-transform: translate(-50%, -50%);
}

.dialog_body_img {
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
  width: 560rpx;
  height: 820rpx;
}

.dialog-img {
  width: 560rpx;
  height: 820rpx;
}

.cut-status-text {
  font-size: 28rpx;
  color: white;
  text-align: center;
  display: block;
  padding: 34rpx 0 24rpx 0;
}

.rule_img {
  width: 600rpx;
  height: 760rpx;
  position: absolute;
  left: 0;
  top: 0;
}

@import "/utils/templates/no_data/no_data.wxss";