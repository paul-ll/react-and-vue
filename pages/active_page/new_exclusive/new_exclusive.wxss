/* pages/active_page/new_exclusive/new_exclusive.wxss */

page {
    width: 750rpx;
}

.content-area {
    padding-bottom: 120rpx;
    text-align: center;
}

.banner {
    width: 750rpx;
    height: 350rpx;
}

.second-title {
    font-size: 40rpx;
    text-align: center;
    margin-top: 20rpx;
}

.voucher-card-image {
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    z-index: -1;
    width: auto;
    height: auto;
}

.voucher-card {
    display: inline-block;
    max-width: 440rpx;
    padding: 26rpx 50rpx;
    box-sizing: border-box;
    background-size: 100% 100%;
    margin-right: 40rpx;
    position: relative;
}

.scroll-view_H {
    width: 100%;
    white-space: nowrap;
    padding: 20rpx 30rpx 60rpx 30rpx;
    box-sizing: border-box;
}

.voucher-money-title {
    display: inline-block;
    font-size: 44rpx;
}

.voucher-money {
    display: inline-block;
    font-size: 72rpx;
}

.voucher-title {
    font-size: 32rpx;
    white-space: pre;
}

.voucher-first-content {
    font-size: 24rpx;
    white-space: pre;
}

.voucher-second-content {
    font-size: 20rpx;
    white-space: pre;
}

.voucher-title-area {
    display: inline-block;
    vertical-align: middle;
    margin-left: 22rpx;
}

.voucher-price-area {
    display: inline-block;
    vertical-align: middle;
}

/** ==========瀑布流商品区域========== */

@import "/utils/templates/product_single/product_single.wxss";
/** ==========瀑布流商品区域========== */

.bottom-area {
    width: 100%;
    height: 98rpx;
    position: fixed;
    bottom: 0;
    background: white;
}

.cart-area {
    width: 140rpx;
    display: inline-block;
    vertical-align: top;
    height: 100%;
    position: relative;
    text-align: center;
    line-height: 0;
}

.cart-area-inner {
    display: inline-block;
    text-align: center;
    vertical-align: middle;
}

.cart-icon {
    width: 44rpx;
    height: 44rpx;
    line-height: 44rpx;
    display: block;
    margin: 0 auto;
    padding-top: 27rpx;
}

.cart-inner-bottom {
    display: inline-block;
    font-size: 20rpx;
    color: #262626;
    line-height: normal;
}

.cart-unit {
    display: inline-block;
}

.cart-product-price {
    display: inline-block;
}

.cart-product-num {
    display: inline-block;
    position: absolute;
    right: 32rpx;
    top: 20rpx;
    font-size: 20rpx;
    color: white;
    background: #ff4891;
    height: 20rpx;
    min-width: 20rpx;
    line-height: 20rpx;
    border-radius: 10rpx;
    padding: 2rpx;
}

.more-product {
    width: 610rpx;
    display: inline-block;
    background: #ff4891;
    color: white;
    font-size: 32rpx;
    text-align: center;
    vertical-align: middle;
    line-height: 98rpx;
}

.groupBtn {
    position: fixed;
    height: 236rpx;
    width: 118rpx;
    bottom: 150rpx;
    right: 28rpx;
    overflow: hidden;
}

.groupTop {
    width: 118rpx;
    height: 118rpx;
    position: relative;
}

.groupTop image {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
}