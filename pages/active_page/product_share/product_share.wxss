}

.product-container-2 {
    margin-top: 78rpx;
    margin-bottom: 20rpx;
    padding: 20rpx;
}

.product-image-2 {
    width: 120rpx;
    height: 120rpx;
    display: inline-block;
    position: absolute;
    vertical-align: middle;
    margin-left: 20rpx;
    border-radius: 10rpx;
}

.product-name-2 {
    color: #474245;
    font-size: 28rpx;
    width: 100%;
    text-overflow: ellipsis;
    height: 42rpx;
    box-sizing: border-box;
    overflow: hidden;
    text-align: left;
}

.product-date-2 {
    color: #969696;
    font-size: 24rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    text-align: left;
