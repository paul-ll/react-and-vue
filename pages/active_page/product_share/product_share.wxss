    text-align: center;
    padding-top: 150rpx;
    height: 100%;
    width: 100%;
}

.dialog-main-container {
    width: 580rpx;
    margin: 0 auto;
    position: relative;
}

.product-image {
    width: 200rpx;
    height: 200rpx;
    z-index: 7;
    margin-top: 108rpx;
    border-radius: 10rpx;
}

.product-name {
    font-size: 28rpx;
    color: #474245;
    margin-top: 60rpx;
}

.product-date {
    color: #969696;
    font-size: 24rpx;
}

.product-desc {
    color: white;
    font-size: 24rpx;
    margin-top: 30rpx;
    white-space: pre-line;
}

.product-use-now {
    color: #ff4891;
    font-size: 32rpx;
    background-color: white;
    border-radius: 8rpx;
    width: 80%;
    margin: 18rpx auto;
    padding: 20rpx;
}

.product-play-again {
    color: white;
    font-size: 32rpx;
    background-color: #FE4193;
    border-radius: 8rpx;
    width: 80%;
    margin: 18rpx auto;
    padding: 20rpx;
    border: 2rpx white solid;
}

.product-dialog-close {
    width: 48rpx;
    height: 85rpx;
    right: 2px;
    z-index: 4;
    position: absolute;
    top: -2px;
}

.dialog-top {
    width: 580rpx;
    height: 482rpx;
