@import '/utils/templates/recommond_product/recommond_product.wxss';
.welcome_header{
    position: relative;
    width: 100%;
    height: 724rpx;
}
.welcome_user_bg{
    width: 100%;
    position: absolute;
    top:0;
    left: 0;
    height: 758rpx;

}
.welcome_user{
    width: 100%;
    position: relative;
    margin: 0 auto;
    padding-top:30rpx;
    z-index: 99;
    text-align: center;
}
.welcome_user_img{
    width: 130rpx;
    height: 130rpx;
    border-radius: 50%;
}
.welcome_user_info{
    width: 645rpx;
    height: 60rpx;
    position: relative;
    margin: 0 auto;
    margin-top:20rpx;
    background: #d2bcc7;
    border-radius: 8rpx;
}
.welcome_user_tu{
    position: absolute;
    top:-15rpx;
    left: 50%;
    width: 0;
    height: 0;
    -webkit-transform: translate(-10rpx,0);
    -moz-transform:translate(-10rpx,0);
    transform: translate(-10rpx,0);
    border-left: 15rpx solid transparent;
    border-right: 15rpx solid transparent;
    border-bottom: 16rpx solid #d2bcc7;
}
.welcome_user_text{
    font-size: 28rpx;
    line-height: 60rpx;
    
}
.welcome_user_btn{
    width: 690rpx;
    height: 88rpx;
    text-align: center;
    font-family: PingFang-SC-Regular;
    font-size: 36rpx;
    color: #FFFFFF;
    line-height: 88rpx;
    background: #FF4891;
    border-radius: 8rpx;
    z-index: 99;
    position: absolute;
    bottom: -76rpx;
    left: 50%;
    -webkit-transform: translate(-50%,0);
    -moz-transform:translate(-50%,0);
    transform: translate(-50%,0);
}
.welcome_main{
    margin-top:114rpx;
}
.welcome_footer{
    height: 380rpx;
}
.welcome_footer_img{
    width: 100%;
    height: 100%;
}
.order-coupon-recommond{
    width: 690rpx;
    margin: 0 auto;
}
.recommond-product-container {
    padding-bottom: 10rpx;
    background: #FFF4F5;
    border-radius: 8rpx;
  }
  
  .recommond-title {
    text-align: center;
    font-size: 28rpx;
    padding: 30rpx 0;
  }
  
  .sender-name {
    display: inline-block;
    margin-right: 15rpx;
  }
  
  .sender-word {
    color: #ff4891;
  }
  
  .products-wrapper {
    padding: 0 6rpx;
    /* white-space: nowrap; */
  }
  
  .product-recommond-item {
    position: relative;
    background: #ffffff;
    /* border: 1px solid #E6E6E6; */
    border-radius: 4rpx;
    display: inline-block;
    margin-left: 20rpx;
    width: 314rpx;
    padding-bottom: 20rpx;
    box-sizing: border-box;
    margin-bottom: 18rpx;
  }
  .product-icon{
    width: 48rpx;
    height: 64rpx;
    position: absolute;
    top:30rpx;
    left: 30rpx;
  }
  .product-img {
    width: 236rpx;
    height: 236rpx;
    display: block;
    margin: 24rpx auto;
  }
  .products-goindex{
    font-family: PingFangSC-Regular;
    font-size: 24rpx;
    line-height: 46rpx;
    color: #474245;
    margin-top:10rpx;
    text-align: center;
  }
  .product-name {
    font-size: 24rpx;
    margin: 0 20rpx;
    height: 68rpx;
    overflow: hidden;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    text-overflow: ellipsis;
    white-space: normal;
  }
  
  .product-price {
    font-size: 20rpx;
    color: #ff4891;
    margin: 0 20rpx;
  }
  
  .price {
    font-size: 28rpx;
  }
  .product-block{
    display: flex;
    align-items: center;
  }
  .product-block-line{
    font-family: PingFangSC-Regular;
    font-size: 24rpx;
    line-height: 32rpx;
    color: #969696;
    text-decoration:line-through;
  }
  .black-mask {
    background: rgba(0,0,0,.7);
    width: 100%;
    height: 100%;
  }
  
  .close-dialog-btn {
    position:absolute;
    width:71rpx;
    height:101rpx;
    top:-100rpx;
    right:0;
    z-index:2;  
  }
  
  .dialog-body {
    position: absolute;
    top: 50%;
    left: 50%;
    z-index: 100;
    transform: translate(-50%, -50%);
    -webkit-transform: translate(-50%, -50%);
  }
  
  .dialog-img {
    width: 560rpx;
    height: 820rpx;
  }
  
  .transparent {
    opacity: 0;
  }
  
  .dialog-container {
    transition: all 300ms;
    -webkit-transition: all 300ms;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 999;
  }
  
  .text-container {
    width: 560rpx;
    border-radius: 20rpx;
    background: #fff;
    padding: 50rpx 44rpx;
    box-sizing: border-box;
    font-size: 14px;
    color: #474245;
    white-space: pre-wrap;
    max-height: 820rpx;
    overflow-y: auto;
  }
  
  .dialog-text {
    display: block;
    max-height: 600rpx;
    overflow: auto;
  }
  .dialog_main{
    margin: 20rpx;
    }
    .dialog_main_img{
        width:350rpx;
        height: 350rpx;
        display: block;
        margin: 0 auto;
    }
    .dialog_main_title{
      height:36rpx;
      line-height:36rpx;
      padding-top:30rpx;
      padding-bottom:16rpx;
      font-size:36rpx;
      color:#353535;
      text-overflow:ellipsis;
      overflow:hidden;
      white-space:nowrap;
    }
    .dialog_main_name{
      line-height:32rpx;
      font-size:28rpx;
      color:#888888;
    }
    .dialog_main_country{
      margin-top:20rpx;
      font-size:24rpx;
      color:#969696;
      width:80rpx;
      text-align:center;
      border-radius:4rpx;
      background-color:#f5f5f5;
    }
    .dialog_main_list{
      display: flex;
      justify-content: space-between;
      margin-top:30rpx;
    }
    .dialog_main_right{
      font-family:PingFangSC-Regular;
      font-size:22rpx;
      line-height:32rpx;
      color:#969696;
      
    }
    .dialog_main_btn{
      width:100%;
      height: 88rpx;
      background: #ff4891;
      line-height:88rpx;
      font-size:30rpx;
      color:#fff;
      text-align: center;
      margin-top:30rpx;
      border-radius: 8rpx;
    }