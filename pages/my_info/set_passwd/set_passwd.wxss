/**set_passwd.wxss**/
.set-passwd-title {
    width: 100%;
    height: 220rpx;
    text-align: center;
}

.set-passwd-title-image, .set-passwd-title-text {
    display: inline-block;
}

.set-passwd-title-image {
    width: 108rpx;
    height: 108rpx;
    margin-top: 56rpx;
    margin-left: -60rpx;
    position: absolute;
}

.set-passwd-title-text {
    height: 32rpx;
    line-height: 32rpx;
    font-size: 32rpx;
    margin-left: 60rpx;
    color:#353535;
}

.set-passwd-title-text1 {
    margin-top: 68rpx;
}

.set-passwd-title-text2 {
    margin-top: 20rpx;
}

.set-passwd-info {
    margin-left: 100rpx;
    margin-right: 100rpx;
}

.set-passwd-info-text {
    height: 28rpx;
    line-height: 28rpx;
    font-size: 28rpx;
    color: #888888;
}

.set-passwd-info-content {
    margin-top: 20rpx;
    overflow:hidden;
}

.pay-hidden-input {
    position:relative;
    left:-750rpx;
    height:98rpx;
    width:1750rpx;
    border:0px solid;
    z-index:99;
}

.pay-input-first, .pay-input-second {
    position: absolute;
    border:0px solid;
    width:550rpx;
    height:98rpx;
}

.pay-input-first {
    top: 268rpx;
}

.pay-input-second {
    top: 454rpx;
}

.set-passwd-info-second {
    margin-top: 40rpx;
}

.set-passwd-info-check {
    margin-top:22rpx;
    margin-bottom:88rpx;
}

.set-passwd-info-check-diff {
    margin-top:22rpx;
    margin-bottom:54rpx;
}

.set-passwd-info-check-image {
    width: 34rpx;
    height: 34rpx;
    position: absolute;
}

.set-passwd-info-check-text {
    margin-left: 44rpx;
    height: 34rpx;
    line-height: 34rpx;
    font-size: 24rpx;
    color: #ff2741;
}

.set-passwd-info-commit {
    height: 88rpx;
    line-height: 88rpx;
    margin-left: 100rpx;
    margin-right: 100rpx;
    border-radius: 4rpx;
    font-size: 28rpx;
    color: #ffffff;
    text-align: center;
    border:1rpx solid;
}

.set-passwd-info-can-commit {
    background: #ff4891;
}

.set-passwd-info-no-commit {
    background: #c6c6c6;
}