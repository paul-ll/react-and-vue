.redpackage-list-container {}

.redpackage-item-container {
  margin-bottom: 20rpx;
}

.redpacket-select-header {
  position: relative;
  margin-top: 20rpx;
}

.no-redpacket {
  font-size: 28rpx;
  color: #474245;
  padding: 0 40rpx;
  line-height: 98rpx;
  background: #fff;
}

.select-icon {
  position: absolute;
  right: 40rpx;
  border-radius: 50%;
  top: 50%;
  transform: translateY(-50%);
  -webkit-transform: translateY(-50%);
  height: 40rpx;
  width: 40rpx;
  border: 1px solid #e6e6e6;
}

.redpacket-list-empty {
  text-align: center;
}

.voucher-icon-bg {
  width: 180rpx;
  height: 180rpx;
  display: block;
  margin: 300rpx auto 24rpx;
}

.redpacket-empty-text {
  font-family: PingFang-SC-Regular;
  font-size: 28rpx;
  color: #969696;
  letter-spacing: 0;
  text-align: center;
}

.product-voucher-container {
  margin-bottom: 30rpx;
}

.no-more-product-voucher {
  font-size: 26rpx;
  color: #979797;
  text-align: center;
  width: 100%;
  padding-bottom: 30rpx;
}

.checkout-inactive-product-voucher {
  color: #ff4891;
}