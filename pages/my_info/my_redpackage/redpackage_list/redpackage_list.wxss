page {
  background: #f0f0f0;
  height: 100%;
}

.my-redpackage-list-container {
}

.no_bg {
  background: #f0f0f0;
}

.redpackage-header {
  background: #fff;
  white-space: nowrap;
  line-height: 98rpx;
  padding: 20rpx;
  box-sizing: border-box;
  border-top: 1px solid #e6e6e6;
  font-size: 0;
}

.input-wrapper {
  background: #f5f5f5;
  position: relative;
  border-radius: 4rpx;
  margin-right: 94rpx;
}

.exchange-input {
  background: #f5f5f5;
  display: block;
  font-size: 28rpx;
  padding-left: .5em;
}

.clear-input {
  position: absolute;
  top: -4rpx;
  right: 0;
  z-index: 2;
  width: 40rpx;
  height: 40rpx;
  padding: 10rpx;
}

.exchange-text {
  float: right;
  font-size: 32rpx;
  color: #474245;
  display: block;
  text-align: center;
  height: 100%;
  line-height: 50rpx;
  padding-left: 20rpx;
  padding-right: 10rpx;
}

.redpackage-main {
  padding:0 30rpx 20rpx 30rpx;
}

.describe-title {
  line-height: 74rpx;
  overflow: hidden;
  min-height: 30rpx;
}

.end-time-tips {
  font-size: 24rpx;
  color: #969696;
}

.redpacket-count {
  color: #ff4891;
}

