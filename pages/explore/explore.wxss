.questions-scroll-view {
    width: 670rpx;
    margin-left: -335rpx;
    position: fixed;
    top: 0rpx;
    bottom: 130rpx;
    border-radius: 10rpx;
    background: #ffffff;
    border: 1rpx solid #e6e6e6;
    left: 50%;
    padding-top: 20rpx;
}

.questions-info {

}

.questions-answer-info {
    width: 670rpx;
}

.answer-info-list {
    margin-bottom: 50rpx;
}

.answer-list {
    width:670rpx;
    position:relative;
    padding:20rpx 0;
}

.answer-content-wraper {
    display:inline-block;
    width:540rpx;
    margin-left:100rpx;
    padding:10rpx 0;
}

.answer-select {
    width:44rpx;
    height:44rpx;
    margin-left:30rpx;
    display:inline-block;
    position:absolute;
    top:50%;
    margin-top:-22rpx;
}

.answer-select, .answer-content-wraper {
    vertical-align: middle;
}

.answer-select-image, .answer-no-select-image {
    width: 44rpx;
    height: 44rpx;
    display: block;
}

.answer-content {
    width: 550rpx;
    line-height: 38rpx;
    font-size: 28rpx;
    color: #262626;
}

.answer-options-users-title-info {
    width: 610rpx;
    height: 60rpx;
    text-align: center;
    margin-left: -24rpx;
}

.answer-options-users-title-image-before, .answer-options-users-title-image-after {
    width: 48rpx;
    height: 60rpx;
    line-height: 60rpx;
    position: absolute;
    opacity: 0.2;
}

.answer-options-users-title, .answer-options-users-title-image-before, .answer-options-users-title-image-after {
    display: inline-block;
}

.answer-options-users-title-image-before {
    padding-right: 22rpx;
}

.answer-options-users-title-image-after {
    padding-left: 22rpx;
}

.answer-options-users-title {
    max-width: 518rpx;
    height: 60rpx;
    line-height: 60rpx;
    margin-left: 70rpx;
    font-size: 20rpx;
    color: #969696;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.answer-options-users-title-text, .answer-options-users-title-count, .answer-options-users-title-total-count {
    display: inline-block;
}

.answer-options-users-title-count, .answer-options-users-title-total-count {
    color: #ff4891;
}

.answer-options-users-title-total-count {
    padding-left: 15rpx;
}

.answer-avatar-nickname {
    width: 610rpx;
    margin-left: 30rpx;
    margin-right:30rpx;
    background: #f5f5f5;
    border-radius: 10rpx;
}

.answer-options-users {
    width: 122rpx;
    height: 110rpx;
    line-height: 110rpx;
    margin-top: 20rpx;
    margin-bottom: 20rpx;
    display: inline-block;
}

.answer-options-users-image {
    width: 80rpx;
    height: 80rpx;
    position: absolute;
    margin-left: 21rpx;
    border-radius: 50%;
    border: 1rpx solid #e6e6e6;
}

.answer-options-users-text {
    width: 122rpx;
    line-height: 20rpx;
    font-size: 20rpx;
    text-align: center;
    color: #969696;
    padding-top: 90rpx;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
}

.unfold-packup-operation {
    height: 64rpx;
    line-height: 64rpx;
    text-align:center;
    margin-left: -22rpx;
}

.unfold-packup-operation-text, .unfold-packup-operation-image {
    display: inline-block;
}

.unfold-packup-operation-image {
    width: 24rpx;
    height: 24rpx;
    position: absolute;
    margin-top: 24rpx;
}

.unfold-packup-operation-text {
    font-size: 20rpx;
    color: #262626;
}

.button-info {
    width: 260rpx;
    height: 72rpx;
    line-height: 72rpx;
    position:fixed;
    bottom:30rpx;
    left:50%;
    margin-left:-130rpx;
    z-index: 4;
}

.commit-button {
    width: 260rpx;
    height: 72rpx;
    line-height: 72rpx;
    font-size: 32rpx;
    text-align: center;
    color: #ff4891;
    border-radius: 4rpx;
    border:2rpx solid #ff4891;
    box-sizing: border-box;
}

.nocan-commit-button {
    background: #c6c6c6;
    color: #ffffff;
    border: none
}

.bottom-content-info {
    width:610rpx;
    line-height: 38rpx;
    font-size: 24rpx;
    text-align: center;
    color: #969696;
    margin-bottom:50rpx;
    margin:0 auto 50rpx;
}

.page-info {
    width: 70rpx;
    position: fixed;
    bottom: 30rpx;
    right: 40rpx;
    background: #000000;
    opacity: 0.2;
    font-size: 20rpx;
    text-align: center;
    color: #ffffff;
    border-radius: 22rpx;
    height: 34rpx;
    line-height: 34rpx;
}

.explore-loading {
    height: 90rpx;
    width: 204rpx;
    position: absolute;
    top: 50%;
    left: 50%;
    margin-top: -90rpx;
    margin-left: -51px;
}

