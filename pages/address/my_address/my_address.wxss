/**my_address.wxss**/
page {
    background: #fff;
}

.container {
    height: auto;
}

.address-section {
    margin-top:20rpx;
    width: 100%;
    height: 100%;
    margin-right: 20rpx;
    background: #ffffff;
}

.my-address-item {
    width: 690rpx;
    margin-left: 30rpx;
    margin-right: 30rpx;
    border-bottom: 1rpx solid #e5e5e5;
    position: relative;
}

.my-address-item-info {
    width: 574rpx;
    font-size: 34rpx;
    display: inline-block;
    margin-right: 20rpx;
    position: relative;
}

.my-address-item-address {
    padding-top: 24rpx;
    line-height: 54rpx;
    color: #353535;
}

.my-address-item-people {
    padding-top: 14rpx;
    padding-bottom: 34rpx;
    line-height: 34rpx;
    color: #888888;
}

.my-address-item-tag {
    display: inline;
    color: #ff2741;
    font-size: 17px;
    margin-right: 10rpx;
}

.my-address-item-name, .my-address-item-phone-number {
    display: inline;
    margin-right: 10rpx;
}

.my-address-item-province, .my-address-item-city, .my-address-item-area, .my-address-item-region, .my-address-item-address-detail {
    display: inline;
    margin-right: 10rpx;
}

.my-address-item-edit {
    width: 65rpx;
    height: 60rpx;
    border-left: 1rpx solid #e5e5e5;
    color: #969696;
    font-size: 32rpx;
    line-height: 60rpx;
    padding-left: 30rpx;
    display: inline-block;
    position: absolute;
    top:31.25%;
}

.not-address{
    padding-top: 20rpx;
    text-align: center;
    font-size: 15px;
    color: #7f7f7f;
}

.add-address {
    width: 100%;
    height: 168rpx;
    margin-top: 40rpx;
    margin-bottom: 40rpx;
    position: absolute;
}

.add-address-image {
    width: 44rpx;
    height: 44rpx;
    position: absolute;
    top: 22rpx;
    left: 249rpx;
    z-index: 1;
}

.add-address-button {
    width: 200rpx;
    height: 72rpx;
    position: absolute;
    top: 0rpx;
    left:275rpx;
    line-height: 72rpx;
    font-family: PingFang-SC-Regular;
    font-size: 28rpx;
    color: #FFFFFF;
    background: #FF4891;
    border-radius: 4px;
    text-align: center;
}
.not_address_flex{
    width: 300rpx;
    margin: 0 auto;
    margin-top: 340rpx;
    margin-bottom: 114rpx;
    display: flex;
    flex-wrap:wrap;
    justify-content: center;
}
.not_address_img{
    width:180rpx;
    height: 180rpx;
}
.not_address_text{
    font-family: PingFang-SC-Regular;
    font-size: 28rpx;
    color: #969696;
    letter-spacing: 0;
}