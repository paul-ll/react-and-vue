/* pages/order/order_coupon/order_coupon.wxss */
/*红包组件样式*/
@import '/utils/templates/order_coupon_card/order_coupon_card.wxss';
/*商品推荐区域*/
@import '/utils/templates/recommond_product/recommond_product.wxss';
/* 头部 */
.header-container {
  position: relative;
}

.banner-img-bg {
  width: 100%;
}

.user-info-wrapper {
  width: 690rpx;
  margin: 0 auto;
  height: 46rpx;
  white-space: nowrap;
  font-size: 0;
  line-height: 46rpx;
  /* margin: 0 66rpx; */
  position: absolute;
  bottom: 86rpx;
  left: 30rpx;
  display: flex;
  justify-content: center;
}

.user-header-img {
  width: 50rpx;
  height: 50rpx;
  display: inline-block;
  vertical-align: middle;
  border-radius: 50%;
}

.user-said-wrapper {
  height: 100%;  
  position: relative;
  display: inline-block;
  vertical-align: middle;
  overflow: hidden;
  border-radius: 0 12rpx 12rpx 0;
  padding: 0 10rpx 0 24rpx;
}

.user-said-bg {
  height: 100%;
  position: absolute;
  z-index: 1;
  left: 0;
  top: 0;
}

.user-said-text {
  font-size: 24rpx;
  color: #fff;
  max-width: 520rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  position: relative;
  z-index: 2;
}
/* 红包 */
.coupon-container {
  margin-top: -60rpx;
  position: relative;
  padding: 0 30rpx;
  z-index: 2;
}
/* 首页跳转按钮 */
.navigate-button {
  background: #FF4891;
  border-radius: 4rpx;
  width: 690rpx;
  height: 88rpx;
  line-height: 88rpx;
  color: #fff;
  font-size: 32rpx;
  text-align: center;
  margin: 10rpx auto 50rpx;
  z-index:999;
  position:relative;
  
}

.order-coupon-recommond {
  padding: 0 30rpx;
}
/* 朋友手气 */
.friends-record-wrapper {
  padding: 0 30rpx;
  margin: 60rpx 0 0 0;
}

.friends-record {
  font-size: 28rpx;
  color: #262626;
}

.friend-record-title {

}

.friends-list {

}

.friend-item {
  overflow: hidden;
  margin-top: 30rpx;
}

.friend-header-img {
  width: 76rpx;
  height: 76rpx;
  border-radius: 50%;
  float: left;
  margin-right: 20rpx;
}
.friend-redpacket-flex{
  width: 100rpx;
  float: right;
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-end;
  align-items: center;
}
.friend-redpacket-money {
  
  line-height: 40rpx;
  font-size: 32rpx;
  color: #FF4891;
}
.friend-redpacket-best{
  background-image: linear-gradient(45deg, #FEAD28 0%, #FFD560 100%);
  border-radius: 4rpx;
}
.friend-redpacket-name{
  width: 98rpx;
  height:30rpx;
  border-radius: 4rpx;
  line-height: 30rpx;
  text-align: center; 
  font-family: PingFangSC-Regular;
  font-size: 20rpx;
  color: #FFFFFF;
}

.friend-info {
  color: #262626;
}

.friend-info-up {
  line-height: 1;
}

.friend-info-down {
  font-size: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.friend-name {
  font-size: 28rpx;
  font-weight: bold;
}

.friend-time {
  font-size: 20rpx;
  text-indent: .5em;
  display: inline-block;
  margin-left: 10rpx;
}
/* 活动规则 */
.active-rules-wrapper {
  padding: 0 30rpx;
}

.active-rules-title-wrapper {
  margin: 38rpx 0;
}

.rules-title {
  font-size: 28rpx;
  color: #262626;
}

.active-rules-text {
  font-size: 24rpx;
  white-space: pre-wrap;
  line-height: 44rpx;
}

.blank-block {
  height: 80rpx;
}
.detail-loading {
  height: 90rpx;
  width: 204rpx;
  position: absolute;
  top: 500rpx;
  left: 50%;
  margin-left: -51px;
}
.coupon-container-position{
  position: absolute;
  bottom: 30rpx;
  left: 100rpx;
  z-index: 99;
  width:98rpx;
  height:30rpx;
  line-height:30rpx;
  text-align:center;
  font-family:PingFangSC-Regular;
  font-size:20rpx;
  color:#FFFFFF;
  
}
.friend_button_text{
  margin-top: 60rpx;
  text-align:center;
  font-family:PingFangSC-Regular;
  font-size:24rpx;
  color:#262626;

}