.container.can-invite {
  padding-bottom: 100rpx;
}

image {
  width: 100%;
  height: 100%;
}

button {
  background: transparent;
  padding: 0;
}
button:after {
  border: none;
}

.vip-privilege-bg {
  width: 100%;
  height: 940rpx;
}

.invite-num {
  height: 100rpx;
  line-height: 100rpx;
  margin: 0 24rpx;
  font-family: PingFangSC-Semibold;
  font-size: 32rpx;
  color: #474346;
  letter-spacing: 0;
  font-weight: bold;
  border-bottom: 2rpx solid #E6E6E6;
  background: #FBFBFA;
}

.invited-friends {
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-items: center;
  background: #FEFEFE;
}

.invited-friends .friend-info {
  width: 33.3%;
  /*与宽度一般大*/
  height: 250rpx;
  align-self: center;
  
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items:center;
}

.invited-friends .friend-info button {
  height: 108rpx;
}

.friend-info .portrait {
  width: 108rpx;
  height: 108rpx;
}

.friend-info .portrait.invited {
  border-radius: 50%;
  overflow: hidden;
  border: 4rpx solid transparent;
  background-image: linear-gradient(white, white), radial-gradient(circle at bottom right, #CD8C23,#FFDB84);
  background-origin: border-box;
  background-clip: content-box, border-box;
}

.friend-info .nickname {
  text-align: center;
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #474346;
  letter-spacing: 0;
  margin-top: 10rpx;
}
.friend-info nickname.inviting-text {
  color: #969696;
}

.invite-action {
  height: 120rpx;
  width:100%;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 99;
  background: white;
  border-top: 2rpx solid #E6E6E6;
}
.invite-action button {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 690rpx;
  height: 80rpx;
  background: #FF4891;
  color: white;
  font-size: 36rpx;
  line-height:80rpx;
  border-radius: 4rpx;
}
button:after {
  border: none;
  outline: none;
}
@import "/utils/templates/no_data/no_data.wxss";
