page {
  background: #f5f5f5;
}

.alert {
  height: 88rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: white;
  margin-top: 20rpx;
  position: relative;
}

.line {
  width: 50rpx;
  height: 2rpx;
  background: #262626;
  margin: 0 5rpx;
}

.point {
  width: 4rpx;
  height: 4rpx;
  border-radius: 50%;
  background: #262626;
  margin: 0 5rpx;
}

.alertContent {
  font-size: 34rpx;
  color: #262626;
  margin: 0 15rpx;
}

.dividerLine {
  position: absolute;
  height: 1rpx;
  width: 690rpx;
  bottom: 0;
  left: 30rpx;
  background-color: #e6e6e6;
}

.Friendlist {
  width: 100%;
  background: white;
}

.listItem {
  width: 690rpx;
  height: 128rpx;
  display: flex;
  align-items: center;
  margin: 0 auto;
  border-bottom: 1rpx #e6e6e6 solid;
  position: relative;
}

.listHeader {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50rpx;
}

.listContent {
  margin-left: 20rpx;
  height: 90rpx;
  width: 300rpx;
}

.name {
  font-size: 28rpx;
  color: #262626;
  height: 45rpx;
  width: 300rpx;
  line-height: 45rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.haveFriend {
  font-size: 24rpx;
  color: #969696;
  width: 300rpx;
  height: 45rpx;
  line-height: 45rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.instructions {
  font-size: 24rpx;
  color: #969696;
  text-align: center;
  height: 50rpx;
  line-height: 50rpx;
}

.listRight {
  position: absolute;
  right: 0;
  top: 19rpx;
}

.price {
  font-size: 24rpx;
  /* color: #c6c6c6; */
  height: 45rpx;
  line-height: 45rpx;
}

.status {
  font-size: 24rpx;
  color: #969696;
  height: 45rpx;
  line-height: 45rpx;
}


@import "/utils/templates/no_data/no_data.wxss";
