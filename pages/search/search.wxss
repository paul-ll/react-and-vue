page {
    font-family: PingFangSC-Light;
}

.search-content-area {
    padding: 30rpx;
}

.search-top-bar {
    padding: 14rpx 0rpx;
}

.search-input-bar {
    background: #f5f5f5;
    border-radius: 8rpx;
    margin: 0rpx 120rpx 0 30rpx;
    box-sizing: border-box;
    padding: 0 20rpx;
    line-height: 60rpx;
}

.search-icon {
    width: 24rpx;
    height: 24rpx;
    vertical-align: middle;
}

.search-input-box {
    display: inline-block;
    height: 1rem;
    vertical-align: middle;
    margin-left: 12rpx;
    font-size: 24rpx;
    color: #474245;
    width: 90%;
}

.search-button {
    float: right;
    vertical-align: middle;
    font-size: 28rpx;
    color: #262626;
    width: 80rpx;
    text-align: center;
    padding: 0rpx 20rpx;
    line-height: 60rpx;
    font-family: .PingFang-SC-Regular;
}

.search-result-tag {
    display: inline-block;
    border: 1rpx solid #c6c6c6;
    border-radius: 4rpx;
    color: #474245;
    margin: 8rpx;
    padding: 4rpx 14rpx;
    font-size: 28rpx;
}

.search-tags-title {
    font-size: 28rpx;
    color: #969696;
    padding: 10rpx 0;
}

.search-tags-area {
    padding: 10rpx;
}

.clear-history-content {
    font-size: 28rpx;
    color: #474245;
    display: inline-block;
    vertical-align: middle;
    line-height: 10rpx;
    margin-left: 6rpx;
}

.clear-history-icon {
    vertical-align: middle;
    width: 28rpx;
    height: 28rpx;
    line-height: 10rpx;
}

.clear-search-history {
    display: block;
    border: 1rpx solid #c6c6c6;
    border-radius: 8rpx;
    margin: 80rpx auto 100rpx auto;
    width: 240rpx;
    text-align: center;
    line-height: 48rpx;
    font-size: 0;
}

.search-diviler {
    width: 100%;
    height: 1rpx;
    background: #e6e6e6;
    margin: 30rpx 0;
}

.search-result-array-title {
    border-bottom: 1px solid #e6e6e6;
    margin: 10rpx 20rpx 0 20rpx;
}

.search-result-array-icon {
    width: 110rpx;
    height: 28rpx;
    padding: 10rpx 20rpx;
}

.my-order-empty {
    /* position: absolute;
    left: 0rpx;
    top: 0rpx; */
    width: 100%;
    height: 715rpx;
}

.my-order-empty-image {
    width: 180rpx;
    height: 180rpx;
    margin-top: 340rpx;
    margin-left: 306rpx;
}

.search-content {
    position: relative;
}

.my-order-empty-text {
    text-align: center;
    font-family: PingFang-SC-Regular;
    font-size: 28rpx;
    color: #969696;
    letter-spacing: 0;
    margin-top: 24rpx;
}

@import '../../utils/templates/product_item/product_item.wxss';

